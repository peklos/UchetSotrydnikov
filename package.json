{
  "name": "uchet-sotrudnikov",
  "version": "1.0.0",
  "description": "ИС «Учёт сотрудников» — ГАУК «Брянская областная филармония»",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build:frontend": "cd frontend && npm install && npm run build",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "ru.philharmonic.uchet",
    "productName": "Учёт сотрудников",
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "backend_dist/",
        "to": "backend",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": ["ru"],
      "language": "1049"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  }
}
